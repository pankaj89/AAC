<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.master.aac">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity
            android:name=".MainActivity"
            android:label="AAC">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- ViewModels Specific Activities -->
        <activity
            android:name=".viewmodel.ViewModel_Activity"
            android:label="ViewModel">

        </activity>

        <!-- LiveData Specific Activities -->
        <activity
            android:name=".livedata.LiveData_Activity"
            android:label="Live Data">

        </activity>
        <activity android:name=".livedata.LiveData_Activity2"></activity>

        <!-- LifeCycle Specific Activities -->
        <activity
            android:name=".lifecycle.LifeCycle_Activity"
            android:label="LifeCycle">

        </activity>

        <!-- Room Specific Activities -->
        <activity
            android:name=".room.Room_Activity"
            android:label="Room">

        </activity>

    </application>

</manifest>